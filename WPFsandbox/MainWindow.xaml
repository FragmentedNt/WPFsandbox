<Window x:Class="WPFsandbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:WPFsandbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="canvas1">
        <DockPanel Margin="0,0,0,0" Width="792" Height="419">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="stack1" Grid.Column="1">
                    <Button Name="B_draw" Height="30" Content="Draw" Click="B_draw_Click"/>
                    <Button Name="B_add" Height="30" Content="Add" Click="B_add_Click"/>
                    <lvc:CartesianChart Name="Live_1" Series="{Binding seriesCollection}" Height="210"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Canvas>
</Window>
